<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studio.yishujutan.dao.BookDao">

    <select id="getBookInformation" resultType="com.studio.yishujutan.entity.Book">
     SELECT * FROM book ORDER BY RAND() LIMIT 9;
    </select>
    <select id="getSearchBook" parameterType="String" resultType="com.studio.yishujutan.entity.Book">
        select * from book where concat('book_name','use_id','book_category') like '%#{news}%'
    </select>
</mapper>